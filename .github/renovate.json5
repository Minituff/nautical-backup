{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    "docker:enableMajor"
  ],
  "platform": "github",
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "prHourlyLimit": 0, // Unlimited PRs per hour
  "customManagers": [
    {
      "customType": "regex",
      "description": "Self Docker image version updates",
      "fileMatch": [
        ".*docker-run-example",
        "README.md"
      ],
      "matchStrings": [
        "(?<depName>minituff\/nautical-backup):(?<currentValue>.*?)([ |$|\n])"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Auto merge nautical-backup docker image version updates in documentation",
      "groupName": "docs",
      "matchFileNames": [
        "docs/**",
        "snippets/**",
        "README.md"
      ],
      "automerge": true,
      "labels": ["documentation"],
      "assignees": ["minituff"],
      "ignoreTests": true
    }
  ]
}
