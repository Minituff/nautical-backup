{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "useBaseBranchConfig": "merge",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        ".*docker-run-example"
      ],
      "matchStrings": [
        "(?<depName>minituff\/nautical-backup):(?<currentValue>.*?) "
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "README.md"
      ],
      "matchStrings": [
        "(?<depName>minituff\/nautical-backup):(?<currentValue>.*?) "
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Auto merge nautical-backup docker image version updates in documentation",
      "groupName": "docs",
      "matchFileNames": [
        ".*docker-run-example",
        ".*docker-compose-example.yml",
        "README.md"
      ],
      "automerge": true,
      "labels": ["documentation"]
    }
  ]
}